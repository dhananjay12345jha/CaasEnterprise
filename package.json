{
  "packageManager": "yarn@3.2.2",
  "name": "enterprise-integration",
  "version": "0.1.0-rc.7",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "test",
    "infra",
    "contracts",
    "mocks",
    "services",
    "docs",
    "contracts/**/*"
  ],
  "engines": {
    "node": ">=16 <17"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint:staged": "yarn lint-staged",
    "affected:lint": "yarn _workspaces affected:lint",
    "affected:info": "yarn _workspaces affected:info",
    "affected:build": "yarn _workspaces affected:build",
    "affected:test:unit": "yarn _workspaces affected:test:unit",
    "affected:test:feature": "yarn _workspaces affected:test:feature",
    "affected:test:component": "yarn _workspaces affected:test:component",
    "affected:test:integration": "yarn _workspaces affected:test:integration",
    "affected:test:performance": "yarn _workspaces affected:test:performance",
    "affected:test:sanity": "yarn _workspaces affected:test:sanity",
    "affected:test:smoke": "yarn _workspaces affected:test:smoke",
    "affected:test:regression": "yarn _workspaces affected:test:regression",
    "affected:version": "yarn _workspaces affected:version",
    "affected:deploy": "yarn _workspaces affected:deploy",
    "affected:destroy": "yarn _workspaces affected:destroy",
    "release": "HUSKY=0 yarn changelog-version --config changelog.config.js",
    "test:sanity": "yarn _workspaces test:sanity",
    "test:smoke": "yarn _workspaces test:smoke",
    "test:regression": "yarn _workspaces test:regression",
    "test:perf": "yarn _workspaces test:perf",
    "workspaces:lint": "yarn _workspaces workspace:lint",
    "workspaces:format": "yarn _workspaces format:check",
    "workspaces:list": "yarn workspaces list --json",
    "_workspaces": "yarn workspaces foreach --include '@enterprise-integration/*' ${AFFECTED_AFFECTEDYWPARAMS:-} -vpt --topological-dev run "
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@everymile-idp/changelog-version": "file:.idp-shim/dist/changelog-version",
    "@types/eslint": "^8",
    "@types/git-branch-is": "^4",
    "@types/node": "^18.0.1",
    "@types/prettier": "^2",
    "@typescript-eslint/parser": "^5.20.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "git-branch-is": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.5"
  }
}
