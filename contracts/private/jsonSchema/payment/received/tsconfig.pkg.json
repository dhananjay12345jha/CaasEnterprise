{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "sourceMap": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
