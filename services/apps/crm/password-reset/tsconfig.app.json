{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "inlineSources": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../../dist/out-tsc",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["node", "jest"]
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
